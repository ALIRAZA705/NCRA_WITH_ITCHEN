<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="700dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="0dp" />


    <Button
        android:id="@+id/button4"
        android:layout_width="700dp"
        android:layout_height="350dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/switchboard"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn4g_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/switchbutton_red"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4g_3"
        app:layout_constraintStart_toEndOf="@+id/btn4g_3" />

    <Button
        android:id="@+id/btn4g_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/switchbutton_red"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/btn4g_1" />

    <Button
        android:id="@+id/btn4g_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/switchbutton_red"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn4g_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/switchbutton_red"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4g_1"
        app:layout_constraintStart_toEndOf="@+id/btn4g_1" />


    <Button
        android:id="@+id/btn4g_5"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="32dp"

        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/switchbutton_red"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />



    /////////////////////////////
    <TextView
        android:id="@+id/textView4"
        android:layout_width="73dp"
        android:layout_height="33dp"
        android:layout_marginStart="188dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="16dp"
        android:text="Light"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4g_3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="227dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/btn4g_4"
        app:srcCompat="@drawable/plug" />


</android.support.constraint.ConstraintLayout>